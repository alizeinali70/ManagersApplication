@page "/TopMenu/{username}"

 <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <!-- Small boxes (Stat box) -->
                <div class="row">
                    <div class="col-lg-4 col-4" @onclick="Go_To_Branching" style="cursor:pointer">
