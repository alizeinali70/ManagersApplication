@page "/Branching/{regn_code}"

<div class="card">
    <div class="card-header bg-info">
        <h3 class="card-title float-right">نمایش درخواست های انشعاب</h3>
         <button class="btn btn-block warning bg-warning-gradient float-left text-right" @onclick="Back" style="width:65px">بازگشت</button>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0 scroll">
        <table class="table table-striped">
            <tr>
                <th style="width: 10px">#</th>
                <th>شماره درخواست</th>
                @*<th>زیرسیستم</th>*@
                <th>تاریخ بروز رسانی</th>
                <th>مرحله</th>
                <th></th>
            </tr>
            <tbody>
            @foreach (var item in BranchList)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.RQID</td>
                    <td>@item.UPDT_DATE</td>
                    <td>@item.ACTV_DESC</td>
                    <td><button class="btn btn-block btn-primary bg-primary-gradient" @onclick="()=>Click(item.RQID,regn_code)" style="width:65px">نمایش</button></td>
                </tr>
            }
            </tbody>
        </table>



    </div>
    <!-- /.card-body -->
</div>

@code {

    [Parameter]
    public int ID { get; set; }
    [Parameter]
    public Int64 RQID { get; set; }
    [Parameter]
    public string UPDT_DATE { get; set; }
    [Parameter]
    public string ACTV_DESC { get; set; }
    [Parameter]
    public string regn_code { get; set; }
    [Parameter]
    public List<Branching> BranchList { get; set; } 

    protected override async Task OnInitializedAsync()
    {
        //var getcount = await Http.PostAsJsonAsync<string>("api/Branching/Count_All_Contract_Async/", regn_code);
        BranchList = new List<Branching>();
        var getData = await Http.PostAsJsonAsync<string>("api/Branching/Get_All_Contract_Async/","");
        var data = await getData.Content.ReadAsStringAsync();
       BranchList = JsonConvert.DeserializeObject<List<Branching>>(data);
     
    }

    private void Click(Int64 RQID,string regn_code)
    {
        
        NavigationManager.NavigateTo($"Branching_Item/{RQID.ToString()}/{regn_code}");
    }

     private void Back()
    {
        NavigationManager.NavigateTo($"/Index/{regn_code}/");
    }
}
