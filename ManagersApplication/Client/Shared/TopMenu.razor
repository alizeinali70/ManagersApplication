                            </div>
                            <div class="icon">
                                <i class="ion ion-bag"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-4"  @onclick="Go_To_Energy" style="cursor:pointer">
                        <!-- small box -->
                        <div class="small-box bg-success">
                            <div class="inner">
                                <h3>0<sup style="font-size: 20px"></sup></h3>

                                <p>انرژی</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-stats-bars"></i>
                            </div>
                        </div>
                    </div>
                    <!-- ./col -->
                    <div class="col-lg-4 col-4" @onclick="Go_To_Inspector" style="cursor:pointer">
                        <!-- small box -->
                        <div class="small-box bg-warning">
                            <div class="inner">
                                <h3>0</h3>

                                <p>بازرسی</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-person-add"></i>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.row -->
                <!-- Main row -->
                <!-- /.row (main row) -->
            </div>
        </section>
        <!-- /.content -->

@code {
    [Parameter]
    public string username { get; set; }
    [Parameter]
    public int BCount { get; set; }
     protected override async Task OnInitializedAsync()
    {
        var getcount = await Http.PostAsJsonAsync<string>("api/Branching/Count_All_Contract_Async/", username);
        BCount=int.Parse(await getcount.Content.ReadAsStringAsync()); 
    }

    private void Go_To_Branching()
    {
        NavigationManager.NavigateTo($"/Branching/{username}/");

    }
